@page
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contacto - Ecografía 4D</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="stylesheet" href="@Url.Content("~/css/styles.css")">
</head>
<body class="contact-page">
    <header>
        <div class="header-content">
            <h1><i class="fas fa-baby"></i> Ecografía 4D</h1>
            <nav>
                <ul>
                    <li><a href="@Url.Content("~/")">Inicio</a></li>
                    <li><a href="@Url.Content("~/contacto")">Contacto</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropbtn">Acceso <i class="fas fa-chevron-down"></i></a>
                        <div class="dropdown-content">
                            <a href="@Url.Content("~/acceso-doctor")"><i class="fas fa-user-md"></i> Acceso para Doctor</a>
                            <a href="@Url.Content("~/acceso-paciente")"><i class="fas fa-user"></i> Acceso para Paciente</a>
                        </div>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="contact-main">
        <div class="contact-container">
            <h1>Contáctenos</h1>
            <p class="contact-intro">Estamos aquí para responder a sus preguntas y programar su ecografía 4D. No dude en ponerse en contacto con nosotros.</p>

            <div class="contact-content">
                <div class="contact-info">
                    <div class="info-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <p>Calle Principal 123, Cali, Colombia</p>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-phone"></i>
                        <p>+57 (2) 123-4567</p>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-envelope"></i>
                        <p>info@ecografia4d.com</p>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-clock"></i>
                        <p>Lunes a Viernes: 8:00 AM - 6:00 PM</p>
                    </div>
                </div>

                <form id="contactForm" class="contact-form" action="https://formspree.io/f/mgveypkr" method="POST">
                    <div class="form-group">
                        <input type="text" id="Nombre" name="Nombre" required placeholder=" ">
                        <label for="Nombre">Nombre</label>
                    </div>
                    <div class="form-group">
                        <input type="email" id="Email" name="Email" required placeholder=" ">
                        <label for="Email">Email</label>
                    </div>
                    <div class="form-group">
                        <input type="tel" id="Telefono" name="Telefono" placeholder=" ">
                        <label for="Telefono">Teléfono</label>
                    </div>
                    <div class="form-group">
                        <textarea id="Mensaje" name="Mensaje" required placeholder=" "></textarea>
                        <label for="Mensaje">Mensaje</label>
                    </div>
                    <button type="submit" class="btn-submit">Enviar Mensaje</button>
                </form>
            </div>
        </div>
    </main>

    <div id="successMessage" class="success-message">
        <div class="success-content">
            <i class="fas fa-check-circle"></i>
            <h3>¡Mensaje enviado con éxito!</h3>
            <p>Gracias por contactarnos. Pronto recibirá una respuesta.</p>
        </div>
    </div>

    <div id="errorMessage" class="error-message">
        <div class="error-content">
            <i class="fas fa-times-circle"></i>
            <h3>¡Error!</h3>
            <p id="errorText">Ha ocurrido un error inesperado.</p>
        </div>
    </div>

    <footer>
        <div class="footer-content">
            <p>&copy; 2024 Sistema de Gestión de Información Médica para Ecografía 4D. Todos los derechos reservados.</p>
            <div class="social-links">
                <a href="#" aria-label="Facebook"><i class="fab fa-facebook"></i></a>
                <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </footer>

    <script src="@Url.Content("~/js/contacto.js")"></script>
</body>
</html>