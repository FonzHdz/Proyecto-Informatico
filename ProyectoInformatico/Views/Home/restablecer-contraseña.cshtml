@page
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restablecimiento de Contraseña - Ecografía 4D</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="stylesheet" href="@Url.Content("~/css/styles.css")">
</head>
<body class="reset-password-page">
    <header>
        <div class="header-content">
            <h1><i class="fas fa-baby"></i> Ecografía 4D</h1>
            <nav>
                <ul>
                    <li class="dropdown">
                        <a href="#" class="dropbtn">Acceso <i class="fas fa-chevron-down"></i></a>
                        <div class="dropdown-content">
                            <a href="@Url.Content("~/acceso-doctor")"><i class="fas fa-user-md"></i> Acceso para Doctores</a>
                            <a href="@Url.Content("~/acceso-paciente")"><i class="fas fa-user"></i> Acceso para Pacientes</a>
                        </div>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="contact-main">
        <div class="contact-container">
            <h1>Restablecimiento de Contraseña</h1>
            <p class="contact-intro">Por favor, ingrese su cédula para restablecer su contraseña.</p>
            <div class="contact-content">
                <form id="resetPasswordForm" class="contact-form" method="post" action="https://formspree.io/f/mgveypkr">
                    <div class="form-group">
                        <input type="text" id="Cedula" name="Cedula" required placeholder=" ">
                        <label for="Cedula">Cédula</label>
                    </div>
                    <div class="form-group">
                        <input type="text" id="Asunto" name="Asunto" value="Restablecimiento de contraseña" readonly placeholder=" ">
                        <label for="Asunto">Asunto</label>
                    </div>
                    <button type="submit" class="btn-submit">Enviar Mensaje</button>
                </form>
            </div>
        </div>
    </main>

    <div id="successMessage" class="success-message">
        <div class="success-content">
            <i class="fas fa-check-circle"></i>
            <h3>¡Contraseña restablecida!</h3>
            <p>Su contraseña ha cambiado.</p>
        </div>
    </div>

    <div id="errorMessage" class="error-message">
        <div class="error-content">
            <i class="fas fa-times-circle"></i>
            <h3>¡Error!</h3>
            <p id="errorText">Ocurrió un error inesperado.</p>
        </div>
    </div>

    <footer>
        <div class="footer-content">
            <p>&copy; 2024 Sistema de Gestión de Información Médica para Ecografía 4D. Todos los derechos reservados.</p>
            <div class="social-links">
                <a href="#" aria-label="Facebook"><i class="fab fa-facebook"></i></a>
                <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </footer>

    <script src="@Url.Content("~/js/restablecer-contraseña.js")"></script>
</body>
</html>